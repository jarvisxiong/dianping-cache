<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dianping.cache.alarm.dao.RedisAlarmTemplateDao">

    <resultMap id="RedisTemplateResult" type="RedisTemplate">
        <result column="id" property="id"/>
        <result column="clusterName" property="clusterName"/>
        <result column="isDown" property="isDown"/>
        <result column="memThreshold" property="memThreshold"/>
        <result column="createTime" property="createTime"/>
        <result column="updateTime" property="updateTime"/>
    </resultMap>

    <insert id="insert" parameterType="RedisTemplate">
        INSERT INTO redis_alarmTemplate(id,clusterName,isDown,memThreshold,createTime, updateTime)
        VALUES(#{id},#{clusterName},#{isDown},#{memThreshold},#{createTime},#{updateTime})
    </insert>

    <update id="update" parameterType="RedisTemplate">
        UPDATE redis_alarmTemplate
        SET clusterName=#{clusterName},isDown=#{isDown},memThreshold=#{memThreshold},createTime=#{createTime},updateTime=#{updateTime}
        WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="int">
        DELETE FROM redis_alarmTemplate
        WHERE id = #{id}
    </delete>


    <select id="findById" resultMap="RedisTemplateResult" parameterType="int">
        SELECT id,clusterName,isDown,memThreshold,createTime, updateTime
        FROM redis_alarmTemplate
        WHERE id = #{id}
        ORDER BY id ASC
    </select>

    <select id="findAlarmTemplateByClusterName" resultMap="RedisTemplateResult" parameterType="String">
        SELECT id,clusterName,isDown,memThreshold,createTime, updateTime
        FROM redis_alarmTemplate
        WHERE clusterName = #{clusterName}
        ORDER BY id ASC
    </select>

    <select id="findAll" resultMap="RedisTemplateResult">
        SELECT id,clusterName,isDown,memThreshold,createTime, updateTime
        FROM redis_alarmTemplate
        ORDER BY id ASC
    </select>

</mapper>