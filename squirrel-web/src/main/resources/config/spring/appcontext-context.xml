<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
    http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
	<!--
	<context:property-placeholder location="classpath:config/applicationContext.properties"/>
	 -->

	<bean id="placeholder" class="com.dianping.lion.client.SpringConfig">
        <property name="propertiesPath" value="config/applicationContext.properties" />
    </bean>

	<bean class="com.dianping.cache.util.SpringLocator"/>

    <bean id="migrator" class="com.dianping.cache.util.Migrator">
        <property name="cacheConfigService" ref="cacheConfigurationService"/>
        <property name="cacheKeyConfigService" ref="cacheKeyConfigurationService"/>
        <property name="zkAddress" value="${avatar-cache.zookeeper.address}"/>
    </bean>

    <bean id="monitor" class="com.dianping.cache.monitor.TaskManager" init-method="start"/>

    <bean class="com.dianping.cache.alarm.lifecycle.LifecycleComponentManager" />

     <bean id="dataStorage" class="com.dianping.cache.monitor.storage.MemcacheStatsDataStorage"></bean>
     <bean id="store" class="com.dianping.cache.monitor.storage.ServerStatsDataStorage"></bean>
     <bean id="cleanData" class="com.dianping.cache.timedtask.TimedCleanData"></bean>
     <bean id="applist" class="com.dianping.cache.timedtask.TimedRetriCategoryToApp"></bean>
	<bean id="redisDataStorage" class="com.dianping.cache.monitor.storage.RedisStatsDataStorage"></bean>
</beans>
